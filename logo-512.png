<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="512" height="512">
  <defs>
    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#764ba2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f093fb;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background with rounded corners -->
  <rect width="512" height="512" rx="64" fill="#0a0a12"/>
  <rect width="512" height="512" rx="64" fill="url(#gradient)" opacity="0.1"/>
  
  <!-- Outer glow rings -->
  <circle cx="256" cy="256" r="200" fill="none" stroke="url(#gradient)" stroke-width="2" opacity="0.2"/>
  <circle cx="256" cy="256" r="160" fill="none" stroke="url(#gradient)" stroke-width="1" opacity="0.3"/>
  
  <!-- Main "k" letter -->
  <path d="M 160 120 L 160 392 L 200 392 L 200 276 L 300 392 L 360 392 L 230 256 L 352 120 L 292 120 L 200 226 L 200 120 Z" 
        fill="url(#gradient)" 
        filter="url(#glow)"
        stroke="url(#gradient)" 
        stroke-width="2" 
        opacity="0.95"/>
  
  <!-- Period/dot with enhanced glow -->
  <circle cx="376" cy="352" r="20" fill="url(#gradient)" filter="url(#glow)"/>
</svg>